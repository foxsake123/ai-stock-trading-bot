# AI Trading Bot - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Required: Anthropic Claude API
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Required: Alpaca Trading API (Paper Trading)
ALPACA_API_KEY=your_alpaca_api_key
ALPACA_SECRET_KEY=your_alpaca_secret_key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Optional: Email Notifications
EMAIL_ENABLED=true
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_gmail_app_password_16_chars
EMAIL_RECIPIENT=recipient@example.com

# Optional: Slack Webhook Notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Optional: Discord Webhook Notifications
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Optional: Financial Datasets API (for enhanced data)
FINANCIAL_DATASETS_API_KEY=your_fd_api_key_here

# Optional: Telegram Bot (for trade alerts)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id
