{
  "bot_name": "DEE-BOT",
  "version": "2.0",
  "description": "Beta-Neutral Multi-Agent Trading System with 2X Leverage",
  
  "trading_strategy": {
    "type": "beta_neutral",
    "enabled": true,
    "target_beta": 0.0,
    "beta_tolerance": 0.1,
    "rebalance_threshold": 0.2
  },
  
  "leverage": {
    "enabled": true,
    "multiplier": 2.0,
    "max_leverage": 2.0,
    "margin_buffer": 0.25,
    "auto_deleverage": true,
    "deleverage_threshold": 0.03,
    "force_close_threshold": 0.07
  },
  
  "risk_management": {
    "max_portfolio_risk": 0.10,
    "max_position_risk": 0.02,
    "max_daily_loss": 0.05,
    "max_position_size": 0.15,
    "portfolio_heat": 0.80,
    "stop_loss_multiplier": 1.5,
    "take_profit_multiplier": 2.5,
    "use_trailing_stops": false,
    "max_correlation": 0.7,
    "max_sector_concentration": 3
  },
  
  "position_sizing": {
    "method": "kelly_criterion",
    "kelly_fraction": 0.25,
    "min_position_value": 1000,
    "max_position_value": 50000,
    "round_shares": true
  },
  
  "portfolio_allocation": {
    "long_allocation": 0.60,
    "hedge_allocation": 0.40,
    "cash_reserve": 0.20,
    "max_positions": 10,
    "max_long_positions": 6,
    "max_hedge_positions": 4
  },
  
  "hedge_instruments": {
    "use_inverse_etfs": true,
    "preferred_hedges": ["SH", "PSQ", "DOG", "SDS", "QID"],
    "use_options": false,
    "use_futures": false
  },
  
  "execution": {
    "auto_execute": false,
    "order_type": "market",
    "time_in_force": "day",
    "extended_hours": false,
    "batch_orders": true,
    "rate_limit_delay": 0.5,
    "retry_failed_orders": true,
    "max_retries": 2
  },
  
  "monitoring": {
    "real_time_monitoring": true,
    "monitor_interval_seconds": 60,
    "alert_on_drawdown": true,
    "alert_threshold": 0.03,
    "send_notifications": false
  },
  
  "data_sources": {
    "primary": "alpaca",
    "backup": "yfinance",
    "use_real_time_data": true,
    "beta_calculation_period": 252,
    "volatility_lookback": 20
  },
  
  "agents": {
    "total_agents": 7,
    "consensus_threshold": 4,
    "risk_manager_veto": true,
    "agent_types": [
      "fundamental_analyst",
      "technical_analyst",
      "news_analyst",
      "sentiment_analyst",
      "bull_researcher",
      "bear_researcher",
      "risk_manager"
    ]
  },
  
  "backtesting": {
    "enabled": false,
    "period_days": 252,
    "initial_capital": 100000,
    "commission": 0.0,
    "slippage": 0.001
