  "logging": {
    "log_trades": true,
    "log_risk_reports": true,
    "log_agent_decisions": true,
    "log_directory": "C:/Users/shorg/ai-stock-trading-bot/09_logs/trading",
    "archive_old_logs": true,
    "retention_days": 30
  },
  
